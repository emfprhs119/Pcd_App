<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:focusable="true"
		android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignBottom="@+id/calcButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="31dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Circle        "
            android:textColor="@color/gray"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/numText"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:ems="10"
            android:inputType="numberSigned"
            android:textColor="@color/gray"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="P.C.D  Î¦  "
            android:textColor="@color/gray"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/pcdText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@color/gray"
            android:textSize="35dp" />

    </LinearLayout>

    <Button
        android:id="@+id/calcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_toRightOf="@+id/linearLayout1"
        android:background="@color/black"
        android:text="Fire!"
        android:textColor="@color/gray"
        android:textSize="35dp" />

    <Switch
        android:id="@+id/roSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:background="@color/black"
        android:text="Rotation"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/pcdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/angleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:text="P.C.D"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textSize="35dp" />

    <Button
        android:id="@+id/angleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pcdButton"
        android:background="@color/black"
        android:text="Angle"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textSize="35dp" />

</RelativeLayout>